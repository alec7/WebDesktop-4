                                        </hbox>
                                    </div>
                                </div> 
                                
                         <div class="form-group"><label class="col-lg-2 control-label">Lista de Promociones</label>
	                                 <listbox id="listaPromociones" height="150px" width="740px" vflex="1" emptyMessage="No hay promociones registradas"  >
										<listhead>
											<listheader  label="Nombre" />
											<listheader  label="Paquete"/>
